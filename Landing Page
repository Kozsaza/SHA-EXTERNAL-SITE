    <script>
        const modal = document.getElementById('contactModal');
        const contactForm = document.getElementById('contactForm');

        function toggleModal(show) {
            if (show) {
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
            } else {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        }

        // Close modal on outside click
        window.onclick = function(event) {
            if (event.target == modal) {
                toggleModal(false);
            }
        }

        contactForm.onsubmit = function(e) {
            e.preventDefault();
            
            const name = document.getElementById('userName').value;
            const email = document.getElementById('userEmail').value;
            const role = document.getElementById('userRole').value;
            const message = document.getElementById('userMessage').value;
            
            const subject = encodeURIComponent(`SHA Inquiry: ${role} - ${name}`);
            const body = encodeURIComponent(
                `Name: ${name}\n` +
                `Email: ${email}\n` +
                `Role: ${role}\n\n` +
                `Message:\n${message}`
            );
            
            window.location.href = `mailto:scalphealthalliance@gmail.com?subject=${subject}&body=${body}`;
            
            // Optional: Close modal after small delay
            setTimeout(() => toggleModal(false), 500);
        }
    </script>

